<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frg_listMovies_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pawel.presentation.ui.moviesList.MoviesListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listMoviesRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_700"
        android:paddingVertical="@dimen/space_small"
        tools:listitem="@layout/item_movie" />

    <include
        android:id="@+id/listMovieNoDataMessage"
        layout="@layout/view_no_data_to_display" />
</FrameLayout>